<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sujith.cp.notes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_ic"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="sujith.cp.notes.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sujith.cp.notes.NoteList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.NOTESUJITH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="sujith.cp.notes.EditNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.EDITNOTE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="sujith.cp.notes.NoteView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.NOTEVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="sujith.cp.notes.ColorPref"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.COLORPREF" />

                <category android:name="android.intent.category.PREFERENCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>